{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "removeComments": true,
    "allowJs": true,
    "lib": ["es6", "dom", "es2017"],
    "strict": true
  }
}
